<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Home Page</title>

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/main.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />

    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>

    <!-- CSS -->
    <link rel="stylesheet" href="/styles/header.css" type="text/css" />
    <link rel="stylesheet" href="/styles/checkout.css" type="text/css" />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@700&family=Source+Sans+Pro:wght@300;400;600&display=swap"
      rel="stylesheet"
    />
  </head>

  <body>
    <%- include('partials/_header') %>
    <main>
      <h1>Pick-up Info</h1>

      <div class="table-content">
        <div class="checkout-table">
          <table>
            <tbody>
              <tr>
                <td>Name:</td>
                <td id="name"></td>
              </tr>
              <tr>
                <td>Phone Number:</td>
                <td id="phone"></td>
              </tr>
              <tr>
                <td>Email:</td>
                <td id="email"></td>
              </tr>
              <tr>
                <td>Order details:</td>
                <table class="order-details">
                </table>
              </tr>
              <hr class="checkout-divider" />
              <div class="checkout-price">
                <table>
                  <tr>
                    <td>Subtotal:</td>
                    <td id="subtotal"></td>
                  </tr>
                  <tr>
                    <td>Tax:</td>
                    <td id="tax"></td>
                  </tr>
                  <tr>
                    <td>Total:</td>
                    <td id="total"></td>
                  </tr>
                </table>
              </div>
            </tbody>
          </table>
        </div>

        <div class="checkout-btn-group">
          <button type="button" class="btn-trans checkout-button back">Back</button>
          <button type="button" class="btn checkout-button place-order">
            Place Order
          </button>
        </div>

    </main>
    <script src="scripts/helpers.js"></script>
    <script src="scripts/checkout.js"></script>
  </body>
</html>
