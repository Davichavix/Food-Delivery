<!DOCTYPE html>
<html lang="en">

<head>
  <title>Sign In</title>

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="/styles/main.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />

  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>
  <script type="text/javascript" src="/scripts/map.js"></script>

  <!-- CSS -->
  <link rel="stylesheet" href="/styles/signin.css" type="text/css" />
  <link rel="stylesheet" href="/styles/footer.css" type="text/css" />

  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@700&family=Source+Sans+Pro:wght@300;400;600&display=swap" rel="stylesheet">

  <!-- Font Awesome-->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

</head>

<body>
  <header>
    <a href='/' class="header-logo"><img src="/images/logo.png" class="logo"></a>
  </header>
  <main>
    <h1 id="signin-title">Sign In</h1>

    <div class="shadow-box">
      <form class="signin-form">
        <div class="form-group">

          <input class="form-control" type="email" name="email" placeholder="Enter email">
        </div>
        <div class="form-group">

          <input class="form-control" type="password" name="password" placeholder="Password">
        </div>
        <div class="button-control">
          <button type="submit" class="btn signin-button">Let's Bubble!</button>
        </div>
        <div class="button-control">
          <button type="submit" class="btn signin-button">Sign Up</button>
        </div>
      </form>
    </div>

  </main>
  <%- include('partials/_footer') %>

  <!-- Google Map -->
  <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBkDWIRmETEukyPlVAz__0GAY_bDZ8DuU8&callback=initMap&libraries=&v=weekly" async></script>

  <script src="/scripts/signin.js" ></script>

</body>

</html>
